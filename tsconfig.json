{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
